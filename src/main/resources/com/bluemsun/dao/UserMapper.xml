<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluemsun.dao.UserDao">
    <cache type="com.bluemsun.util.RedisMybatisCache"/>
    <!-- crud -->
    <insert id="insertUser" parameterType="com.bluemsun.entity.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (name, pwd, phone, uuid)
        VALUES (#{name}, #{pwd}, #{phone}, #{uuid})
    </insert>
    <update id="updateUser" parameterType="com.bluemsun.entity.User">
        UPDATE user
        SET name  = #{name},
            pwd   = #{pwd},
            photo = #{photo},
            phone = #{phone}
        WHERE id = #{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        DELETE
        FROM user
        where id = #{id}
    </delete>
    <select id="getUser" resultType="com.bluemsun.entity.User"
            parameterType="com.bluemsun.entity.User">
        SELECT name,pwd,phone,admin,photo,banned,uuid,id,create_time FROM user WHERE
        <choose>
            <when test="uuid != null and pwd != null">
                uuid = #{uuid} AND BINARY pwd = #{pwd} AND admin = 0
            </when>
            <when test="uuid != null">
                uuid = #{uuid} AND admin = 0
            </when>
            <when test="id != null">
                id = #{id} AND admin = 0
            </when>
            <otherwise>
                1 = 1
            </otherwise>
        </choose>
    </select>
    <!-- user page -->
    <select id="getAmount" resultType="java.lang.Integer">
        SELECT COUNT(id)
        FROM user
    </select>
    <select id="getUsersInPage" resultType="com.bluemsun.entity.User">
        SELECT name, phone, photo, admin, banned, uuid, id,create_time
        FROM user
        LIMIT #{start},#{len}
    </select>
</mapper>